<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:fontFamily">@font/samim</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogStyle</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar</item>
    </style>


    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="ImageViewerTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MyEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DashTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/dash</item>

    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/monadi</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/monadi</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="QuestionAnswerStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="questionTypeCountTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:padding">12dp</item>
        <item name="alpha">0.87</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.SpinnerStyle">
        <item name="android:textDirection">anyRtl</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="home_section_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/home_section_spacing</item>
        <item name="android:background">@drawable/bg_circle_blue_gradient</item>
        <item name="android:elevation">@dimen/home_circle_elevation</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:padding">@dimen/home_circle_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/home_circle_text_size</item>
    </style>

    <style name="home_section_image_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/home_circle_padding</item>
        <item name="android:layout_marginTop">@dimen/home_circle_top_padding</item>
        <item name="android:layout_marginEnd">@dimen/home_circle_padding</item>
        <item name="android:layout_marginBottom">@dimen/home_circle_bottom_padding</item>
        <item name="android:contentDescription">@string/section_icon_desc</item>
        <item name="android:elevation">6dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="flat_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">@dimen/max_value</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="circleImageViewAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="profile_content_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:elevation">@dimen/max_value</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/profileAttributeSize</item>
    </style>

    <style name="profile_title_text_style" parent="profile_content_text_style">
        <item name="android:layout_marginStart">@dimen/profile_spacing</item>
        <item name="android:layout_marginTop">@dimen/profile_spacing</item>
        <item name="android:alpha">0.6</item>
        <item name="android:drawablePadding">@dimen/edit_text_drawable_padding</item>
    </style>


    <style name="profile_section_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/profile_spacing</item>
        <item name="android:layout_marginStart">@dimen/profile_spacing</item>
        <item name="android:textSize">20sp</item>
        <item name="android:alpha">0.32</item>
        <item name="android:elevation">@dimen/max_value</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="divider_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.1</item>
        <item name="android:elevation">@dimen/max_value</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:background">@color/colorAccent</item>
    </style>


</resources>
